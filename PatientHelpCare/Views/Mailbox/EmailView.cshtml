@model IEnumerable<PatientHelpCare.DataModel.Message>
@{
    ViewBag.Title = "EmailView";
}

<div class="wrapper wrapper-content">
    <div class="row">   
        @foreach (var item in ViewBag.LastMessage)
        {
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <div class="pull-right tooltip-demo">
                    <a href="@Url.Action("ComposeEmail", "Mailbox")" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Reply"><i class="fa fa-reply"></i> Reply</a>
                    <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Print email"><i class="fa fa-print"></i> </a>
                    <a href="@Url.Action("Inbox", "Mailbox")" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
                </div>
                <h2>
                    View Message
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">

                    
                    <h3>
                        <span class="font-noraml">Subject: </span>@item.Subject
                    </h3>
                    <h5>
                        <span class="pull-right font-noraml">@item.DateTime</span>
                        <span class="font-noraml">From: </span>@ViewBag.From
                    </h5>
                </div>
            </div>
            <div class="mail-box">


                <div class="mail-body">
                    
                </div>
                
                    </div>
                </div>
                    }
                <div class="mail-body text-right tooltip-demo">
                    <a class="btn btn-sm btn-white" href="@Url.Action("ComposeEmail", "Mailbox")"><i class="fa fa-reply"></i> Reply</a>
                    <a class="btn btn-sm btn-white" href="@Url.Action("ComposeEmail", "Mailbox")"><i class="fa fa-arrow-right"></i> Forward</a>
                    <button title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Print" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Print</button>
                    <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Remove</button>
                </div>
                <div class="clearfix"></div>


            </div>
        </div>
