@model PatientHelpCare.DataModel.Appointment

@{
    ViewBag.Title = "Create";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Create Appointment</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary  btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("Create", "Appointments", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <p class = "control-label col-md-2" style="font-weight:bold">Email</p>
                                <div class="col-md-10">
                                    <input name="Email" type="text" class="form-control" />
                                    <p class="text-danger">@ViewBag.Error</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <p class="control-label col-md-2" style="font-weight:bold">Date</p>
                                <div class="col-md-10">
                                    <input name="Date" id="Date" type="text" class="form-control" />
                                    <p class="text-danger">@ViewBag.Date</p>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <p class="control-label col-md-2" style="font-weight:bold">Time</p>
                                <div class="col-md-10">                                    
                                    <input name="Time" id="Time" type="text" class="form-control" />
                                    <p class="text-danger">@ViewBag.Time</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
