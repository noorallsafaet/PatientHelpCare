        .p-0-left, .p-0-left-right {
            padding-left: 0 !important;
        }

        .pager {
            margin: 8px 3px;
            padding: 3px;
        }

            .pager .disabled {
                border: 1px solid #1ab394;
                color: #999;
                margin-top: 4px;
                padding: 3px;
                text-align: center;
            }

            .pager .current {
                background-color: #1ab394;
                border: 1px solid #1ab394;
                color: #fff;
                font-weight: bold;
                margin-top: 4px;
                padding: 3px 5px;
                text-align: center;
            }

            .pager span, .pager a {
                margin: 4px 3px;
            }

            .pager a {
                border: 1px solid #1ab394;
                padding: 3px 5px;
                text-align: center;
                text-decoration: none;
            }

        .table {
            border-collapse: collapse;
        }

        td {
            padding-top: .5em;
            padding-bottom: .5em;
        }
    </style>

</head>
