                                        }
                                        <hr />
                                    </div>
                                </div>

                                <div class="ibox">
                                    <div class="ibox-content">

                                        <h3>Qualification</h3>
                                        @foreach (var item in ViewBag.Qualification)
                                        {
                                            <hr />
                                            <div class="search-result">
                                                <div>
                                                    <h3 style="color:#1ab394">@item.Degree</h3>
                                                    <p><strong>@item.University, @item.Country </strong> @item.StartYear - @item.EndYear</p>

                                                </div>
