@model PatientHelpCare.DataModel.Appointment

@{
    ViewBag.Title = "Edit";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit of Appointment</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary  btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)

                            <div class="form-group">
                                <p class="control-label col-md-2" style="font-weight:bold">Patient Full Name</p>
                                <div class="col-md-10">
                                    <input name="Email" type="text" value="@ViewBag.Email" class="form-control" />
                                    <p class="text-danger">@ViewBag.Error</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <p class="control-label col-md-2" style="font-weight:bold">Date</p>
                                <div class="col-md-10">
                                    <input name="Date" type="text" id="Date" class="form-control" value="@Model.Appointment_date" />
                                    <p class="text-danger">@ViewBag.Date</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <p class="control-label col-md-2" style="font-weight:bold">Time</p>
                                <div class="col-md-10">
                                    <input id="Time" name="Time" type="text" class="form-control" value="@Model.Appointment_Time" />
                                    <p class="text-danger">@ViewBag.Time</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<link href="~/Content/plugins/clockpicker/clockpicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.2.3.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/plugins/clockpicker/clockpicker.js"></script>
<script>

    $('#Time').clockpicker({
        placement: 'bottom',
        align: 'left',
        autoclose: true,
        'default': 'now',
        autoclose: true,
        twelvehour: true,
        afterDone: function () {
            clockpicker.val(clockpicker.val().slice(0, -2) + ' ' + clockpicker.val().slice(-2));
        }
    });

    $("#Date").datepicker({
        //        showOn: 'both',
        //        buttonImage: '/images/calendar.gif',
        buttonImageOnly: true,
        autoOpen: true,
        changeMonth: true,
        dateFormat: "dd M yy",
        changeYear: true,
        //        showButtonPanel: true,
        autoSize: true,
        setDate: "0"
    }).datepicker("setDate", "0");

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
