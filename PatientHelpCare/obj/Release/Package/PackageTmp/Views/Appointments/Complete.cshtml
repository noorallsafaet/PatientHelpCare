@model PatientHelpCare.DataModel.Appointment

@{
    ViewBag.Title = "Complete";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Complete Appointment</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary  btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Success, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.DropDownListFor(m => m.Success, new List<SelectListItem>
                   { new SelectListItem{Text="Success", Value="Success"},
                     new SelectListItem{Text="Unsuccess", Value="Unsuccess"}},
                     "Select One", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Success, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.Rating, new List<SelectListItem>
                   { new SelectListItem{Text="1", Value="1"},
                     new SelectListItem{Text="2", Value="2"},
                     new SelectListItem{Text="3", Value="3"},
                     new SelectListItem{Text="4", Value="4"},
                     new SelectListItem{Text="5", Value="5"}},
                     "Select One", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
