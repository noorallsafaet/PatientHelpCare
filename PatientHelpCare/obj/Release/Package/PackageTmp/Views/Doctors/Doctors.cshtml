@using MvcPaging
@model IPagedList<PatientHelpCare.DataModel.Doctor>

@{
    ViewBag.Title = "Doctors";
}
<style>
    .p-0-left, .p-0-left-right {
    padding-left: 0!important;
}
    .pager {
                  margin: 8px 3px;
                  padding: 3px;
                }

               .pager .disabled {
                   border: 1px solid #1ab394;
                   color: #999;
                   margin-top: 4px;
                   padding: 3px;
                   text-align: center;
               }

               .pager .current {
                   background-color: #1ab394;
                   border: 1px solid #1ab394;
                   color: #fff;
                   font-weight: bold;
                   margin-top: 4px;
                   padding: 3px 5px;
                   text-align: center;
               }

               .pager span, .pager a {
                   margin: 4px 3px;
               }

               .pager a {
                   border: 1px solid #1ab394;
                   padding: 3px 5px;
                   text-align: center;
                   text-decoration: none;
               }
               .table {
    border-collapse: collapse;
}

td {
    padding-top: .5em;
    padding-bottom: .5em;
}
</style>
<script src="~/Scripts/jquery-2.2.3.js"></script>
<script src="~/Scripts/Doctors.js"></script>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">  
                    <div class="search-form">                        
                        
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div style="width:100%;">
                                <table class="table">
                                    <tr>
                                        <td>
                                            <select id="Location" name="Location" class="form-control">
                                                <option value="0">Any Location</option>
                                                <option value="North Dhaka">North Dhaka</option>
                                                <option value="South Dhaka">South Dhaka</option>
                                            </select>
                                        </td>
                                        <td>
                                            <select id="Specialist" name="Specialist" class="form-control">
                                                <option value="0">Any Disease</option>
                                                <option value="Heart">Heart</option>
                                                <option value="Eye">Eye</option>
                                                <option value="Skin">Skin</option>
                                                <option value="Gastroenterology">Gastroenterology</option>
                                                <option value="Endocrinology">Endocrinology</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <select id="Area" name="Area" class="form-control">
                                                <option value="0">Select One</option>
                                            </select>
                                        </td>                                        
                                    </tr>

                                    <tr>
                                        <td>
                                            <select id="ddlDhakaArea" name="ddlDhakaArea" class="form-control">
                                                <option value="0">Select One</option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div class="input-group">
                                <input type="text" placeholder="Search Doctors" name="Name" class="form-control input-lg">
                                <div class="input-group-btn">
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Search
                                    </button>
                                </div>
                            </div>
                        }
                    </div>                    
                    
                    @foreach (var item in Model)
                    {
                        <div class="hr-line-dashed"></div>
                        <div class="search-result">                    
                        <div class="col-md-2"><a href="~/Doctors/Details/@item.DoctorId" alt="@Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)" title="@Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)"><img style="min-width:100px; min-height:100px; max-height:100px;max-width:100px;border-radius:50%;" src="@Html.DisplayFor(modelItem => item.PhotoLocation)" />
                        </a></div>     
                        <div>
                            <h3><a href="~/Doctors/Details/@item.DoctorId">@Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)</a></h3>
                            @Html.DisplayFor(modelItem => item.Title),
                            <a href="#" class="search-link">Specialist: @Html.DisplayFor(modelItem => item.Specialist)</a>
                            <p>
                                @Html.DisplayFor(modelItem => item.OverView) <br/>
                                <a href="#" class="search-link">@Html.DisplayFor(modelItem => item.Area), @Html.DisplayFor(modelItem => item.City)</a>
                            </p>                            
                        </div>                        
                    </div>
                    }
                    <div class="hr-line-dashed"></div>
                    <div class="text-center">                        
                            <div class="pager">
                                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                            </div>
                    </div>
                            
                    </div>
                </div>
            </div>
        </div>
    </div>